  <prefpane
    id="generalPane"
    label="&general;"
    image="chrome://easygestures/content/profile.png">
    <preferences>
      <preference id="startupTips" name="extensions.easygestures.general.startupTips" type="bool" />
    </preferences>
    <checkbox preference="startupTips" label="&general.startupTips;" />
    
    <separator orient="horizontal" class="thin" />
    <menuseparator />
    
    <label value="&general.prefs.manage;" class="header" />
    <hbox>
      <button disabled="true" label="&general.prefs.import;"
              oncommand="importPrefs(); initMenuDialog();" />
      <button disabled="true" label="&general.prefs.export;"
              oncommand="saveAllPreferences(this); exportPrefs();" />
      <button label="&general.prefs.reset;"
              oncommand="if (confirm('&general.prefs.reset;')) { eGPrefs.setDefaultSettings(); initMenuDialog(); }" />
    </hbox>
    
    <separator orient="horizontal" class="thin" />
    <menuseparator />

    <label value="&stats;" class="header" />
    <hbox>
      <button label="&general.stats.display;"
              oncommand="window.openDialog('chrome://easygestures/content/stats.xul', '', 'chrome,alwaysRaised,centerscreen');" />
      <button label="&general.stats.reset;"
              oncommand="if (confirm('&general.stats.reset;')) { eGPrefs.initializeStats(); }" />
    </hbox>
  </prefpane>
  
  <prefpane
    id="activationPane"
    label="&activation;"
    image="chrome://easygestures/content/behavior.png">
