      <checkbox preference="noIcons" label="&behavior.display.noIcons;" />
      <checkbox preference="smallIcons" label="&behavior.display.smallIcons;" />
      <hbox align="center">
        <label value="&behavior.display.opacity;" />
        <textbox preference="menuOpacity" type="number" min="0" max="100"
          size="3" />
        <label value="%" />
      </hbox>
    </vbox>
    
    <separator orient="horizontal" class="thin" />
    <menuseparator />
    
    <checkbox id="showTooltipsCheckbox" preference="showTooltips"
      label="&behavior.tooltips;" oncommand="updateUI();" class="header" />
    <hbox align="center" style="margin-left: 1em">
      <label id="tooltipsDelayLabel" value="&behavior.tooltips;" />
      <textbox id="tooltipsDelayValue" preference="tooltipsDelay" size="3"
        style="text-align: right" />
      <label id="tooltipsDelayUnit" value="ms" />
    </hbox>
    
    <separator orient="horizontal" class="thin" />
    <menuseparator />
    
    <label value="&behavior.move;" class="header" />
    <radiogroup preference="moveAuto" style="margin-left: 1em">
      <radio label="&behavior.move.shiftKey;" value="false" />
      <radio label="&behavior.move.menuEdge;" value="true" />
    </radiogroup>
    
    <separator orient="horizontal" class="thin" />
    <menuseparator />
    
    <checkbox preference="handleLinks" label="&behavior.links;" class="header" />
    <hbox align="center" style="margin-left: 1em">
      <label id="linksDelayLabel" value="&behavior.links.delay;" />
      <textbox preference="linksDelay" size="3" style="text-align: right" />
      <label value="ms" />
    </hbox>
    <hbox style="margin-left: 1em">
      <radiogroup preference="handleLinksAsOpenLink">
        <hbox align="center">
          <radio label="&behavior.links.openLinkAction;" value="true" />
          <separator orient="vertical" />
          <label class="text-link" value="&behavior.links.configureAction;" onclick="document.getElementById('eG_optionsWindow').showPane(document.getElementById('customizationsPane')); var tabbox = document.getElementById('customizationsTabboxes'); tabbox.selectedIndex = tabbox.tabs.getIndexOfItem(document.getElementById('otherActionsCustomizationsTab'));" />
        </hbox>
        <radio label="&behavior.links.browser;" value="false" />
      </radiogroup>
    </hbox>
    
    <separator orient="horizontal" class="thin" />
    <menuseparator />
    
    <checkbox id="autoscrollingOnCheckbox" preference="autoscrollingOn"
      label="&behavior.autoscrolling;" oncommand="updateUI();" class="header" />
    <hbox align="center" style="margin-left: 1em">
      <label id="autoscrollingDelayLabel"
        value="&behavior.autoscrolling.delay;" />
      <textbox id="autoscrollingDelayValue" preference="autoscrollingDelay"
        size="3" style="text-align: right" />
      <label id="autoscrollingDelayUnit" value="ms" />
    </hbox>
  </prefpane>
  
