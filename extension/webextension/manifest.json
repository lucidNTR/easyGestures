{
  "manifest_version": 2,
  "name": "easyGestures N",
  "version": "5.2dev1",
  "description": "A highly customizable pie menu for browsing the Web from where the mouse pointer is located.",
  "author": "Nicolás González-Deleito",
  "homepage_url": "https://github.com/ngdeleito/easyGestures",
  
  "permissions": ["bookmarks", "tabs"],
  "background": {
    "scripts": ["eGContext.js", "eGActions.js", "easyGesturesN-background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["content/easyGesturesN.css"],
    "js": ["content/eGPieMenu.js", "content/easyGesturesN.js"]
  }],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}